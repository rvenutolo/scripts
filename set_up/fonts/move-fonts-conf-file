#!/usr/bin/env bash

set -euo pipefail

#shellcheck disable=SC1091
source "${SCRIPTS_DIR}/functions.bash"
check_no_args "$@"

if [[ -z "${HISTFILE:-}" ]]; then
  exit 0
fi

readonly old_conf_file="${HOME}/.fonts.conf"
readonly new_conf_file="${XDG_CONFIG_HOME}/fontconfig/fonts.conf"

if ! file_exists "${old_conf_file}"; then
  exit 0
fi

move_file "${old_conf_file}" "${new_conf_file}"
