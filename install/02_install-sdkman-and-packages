#!/usr/bin/env bash

set -euo pipefail

#shellcheck disable=SC1091
source "$(dirname -- "${BASH_SOURCE[0]}")/../setup/functions.bash"
check_not_root
check_no_args "$@"

if [[ ! -f "${HOME}/.sdkman/bin/sdkman-init.sh" ]] && prompt_yn 'Install SDKMAN?'; then
  log 'Installing SDKMAN'
  if [[ -d "${HOME}/.sdkman" ]]; then
    # chezmoi will have created ~/.sdkman and the SDKMAN install script assumes
    # that the presence of this directory means that SDKMAN has already been
    # installed and will not actually install SDKMAN. This directory should only
    # contain a symlink to ~/.config/sdkman/config. This symlink will be
    # re-created later in this script.
    rm --recursive "${HOME}/.sdkman"
  fi
  # Retry due to random timeouts
  base_sleep_time=30
  tries=0
  until download 'https://get.sdkman.io?rcupdate=false' | bash; do
    ((tries += 1))
    if ((tries > 10)); then
      die "Failed to install SDKMAN in 10 tries"
    fi
    rm -rf "${HOME}/.sdkman"
    sleep "$((base_sleep_time * tries))"
  done
  log 'Installed SDKMAN'
fi

if [[ -f "${HOME}/.sdkman/bin/sdkman-init.sh" ]] && prompt_yn 'Install SDKMAN packages?'; then
  log 'Installing SDKMAN packages'
  cp "${HOME}/.sdkman/etc/config" "${HOME}/.sdkman/etc/config.orig"
  sed --in-place 's/sdkman_auto_answer=false/sdkman_auto_answer=true/g' "${HOME}/.sdkman/etc/config"
  set +u
  # shellcheck disable=SC1091
  source "${HOME}/.sdkman/bin/sdkman-init.sh"
  # This collects the latest packages per java version
  declare -A java_versions
  while read -r jdk; do
    version="$(cut --delimiter='.' --fields='1' <<< "${jdk}")"
    java_versions["${version}"]="${jdk}"
  done < <(sdk list java | grep --fixed-strings '|' | cut --delimiter='|' --fields='6' | grep '\-tem\s*$' | tac)
  while read -r jdk; do
    log "Installing ${jdk}"
    base_sleep_time=30
    tries=0
    until sdk install java "${jdk}"; do
      ((tries += 1))
      if ((tries > 10)); then
        die "Failed to install in 10 tries: ${jdk}"
      fi
      sleep "$((base_sleep_time * tries))"
    done
  done < <(printf '%s\n' "${java_versions[@]}" | sort --field-separator='.' --key='1' --numeric-sort)
  get_packages_list 'sdkman' | while read -r pkg; do
    log "Installing ${pkg}"
    base_sleep_time=30
    tries=0
    until sdk install "${pkg}"; do
      ((tries += 1))
      if ((tries > 10)); then
        die "Failed to install in 10 tries: ${pkg}"
      fi
      sleep "$((base_sleep_time * tries))"
    done
  done
  set -u
  mv "${HOME}/.sdkman/etc/config.orig" "${HOME}/.sdkman/etc/config"
  log 'Installed SDKMAN packages'
fi

if [[ -f "${HOME}/.config/sdkman/config" ]]; then
  ln --symbolic --force "${HOME}/.config/sdkman/config" "${HOME}/.sdkman/etc/config"
fi
