#!/usr/bin/env bash

set -euo pipefail

#shellcheck disable=SC1091
source "${SCRIPTS_DIR}/functions.bash"
check_at_most_1_arg "$@"

if [[ "$#" -eq 1 ]]; then
  if [[ "$1" == 'debug' ]]; then
    readonly debug='true'
  else
    die "Expected 1 arg: 'debug'"
  fi
else
  readonly debug='false'
fi

find . -iregex '.*\.\(mkv\|mp4\)$' -printf '%P\n' | sort | while read -r video_file; do
  if [[ "${debug})" == 'true' ]]; then
    log "${video_file}"
  fi
  audio_info="$(ffprobe "${video_file}" -show_entries 'stream=index:stream_tags=language' -select_streams 'a' -loglevel '16' -output_format 'compact=p=0:nk=1')"
  if grep --quiet --invert-match --fixed-strings '|eng' <<< "${audio_info}"; then
    echo "${video_file}"
    echo "${audio_info%|}"
    echo '---------'
  fi
done
