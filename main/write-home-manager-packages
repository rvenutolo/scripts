#!/usr/bin/env bash

set -euo pipefail

#shellcheck disable=SC1091
source "${SCRIPTS_DIR}/functions.bash"
check_no_args "$@"

mkdir --parents "$(dirname "${HOME_MANAGER_PACKAGES_FILE}")"
(
  echo "{ pkgs, ... }:"
  echo ""
  echo "{"
  echo "  home.packages = with pkgs; ["
  get_universal_packages 'nixpkgs' | sed 's/^/    /'
  echo "  ];"
  echo "}"
) > "${HOME_MANAGER_PACKAGES_FILE}"
