#!/usr/bin/env bash

set -euo pipefail

source "$(dirname -- "${BASH_SOURCE[0]}")/../lib/functions.bash"
check_at_least_1_arg "$@"

for file; do
  dirname="$(dirname -- "${file}")"
  filename="$(basename -- "${file}")"
  target_file="${dirname}/.${filename}"
  mv -- "${file}" "${target_file}"
  log "${file} -> ${target_file}"
done
