#!/usr/bin/env bash

set -euo pipefail

#shellcheck disable=SC1091
source "$(dirname -- "${BASH_SOURCE[0]}")/../lib/functions.bash"
check_exactly_1_arg "$@"

if is_readable_file "$1"; then
  echo "----------"
  echo "$1"
  echo "----------"
  ls -l "$1"
  file "$1"
else
  die "$1 is not a readable file"
fi
